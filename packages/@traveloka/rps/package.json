{
  "name": "@traveloka/rps",
  "version": "1.0.0",
  "description": "react promise state management, loading, error, and success callback.",
  "main": "dist/index.js",
  "scripts": {
    "lint": "marlint",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "test:ci": "yarn test:coverage -i --reporters jest-simple-dot-reporter jest-junit",
    "build": "npm run build:clean && npm run build:dist",
    "build:clean": "rimraf dist/*",
    "build:dist": "babel es6 --out-dir dist --copy-files --ignore *.test.js,__tests__",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "core-js": "^2",
    "create-react-context": "^0.2.2",
    "hoist-non-react-statics": "^3.0.0",
    "lodash": "^4.17.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-preset-react-native-stage-0": "^1.0.1",
    "eslint-plugin-jest": "^21.18.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "jest-simple-dot-reporter": "^1.0.2",
    "jest-junit": "^5.1.0",
    "marlint": "^6.5.4",
    "nyc": "^12.0.2",
    "react": "^16.3.1",
    "react-native": "~0.55.2",
    "react-test-renderer": "^16.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/traveloka/rps.git"
  },
  "author": "Traveloka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/traveloka/rps/issues"
  },
  "homepage": "https://github.com/traveloka/rps#readme",
  "files": [
    "dist",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "react-native-web",
    "loading",
    "error",
    "handler",
    "retry",
    "react",
    "react-native"
  ],
  "jest": {
    "notify": true,
    "preset": "react-native",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/examples"
    ]
  },
  "marlint": {
    "ignores": [
      "dist/**"
    ]
  },
  "babel": {
    "presets": [
      "babel-preset-react-native-stage-0/decorator-support"
    ],
    "env": {
      "development": {
        "plugins": [
          "transform-react-jsx-source"
        ]
      }
    }
  }
}
